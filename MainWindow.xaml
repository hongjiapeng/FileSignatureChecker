<Window x:Class="FileSignatureChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digital Signature Checker" Height="750" Width="1100"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern flat design styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3E444A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BD2130"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="#F8F9FA" 
                                        CornerRadius="8,8,0,0" Padding="16,12">
                                    <ContentPresenter ContentSource="Header"/>
                                </Border>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" CornerRadius="8,8,0,0" Padding="20,16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="🔐" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Digital Signature Checker" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Verify digital signatures of executable files" FontSize="12" Foreground="#E6F3FF" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Folder Selection -->
        <GroupBox Header="📁 Select Directory" Grid.Row="1" Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtFolderPath" Grid.Column="0" 
                         Style="{StaticResource ModernTextBox}"
                         IsReadOnly="True" 
                         Background="#F8F9FA"
                         Margin="0,0,12,0"
                         Text="Select a directory to scan..."/>
                <Button x:Name="btnSelectFolder" Grid.Column="1" 
                        Content="Browse" 
                        Style="{StaticResource ModernButton}"
                        Width="120"
                        Click="BtnSelectFolder_Click"/>
            </Grid>
        </GroupBox>

        <!-- Detection Settings -->
        <GroupBox Header="⚙️ Scan Settings" Grid.Row="2" Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="File Types:" Grid.Row="0" Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,16,0"
                           FontWeight="SemiBold"/>
                <TextBox x:Name="txtFileTypes" Grid.Row="0" Grid.Column="1" 
                         Style="{StaticResource ModernTextBox}"
                         Text="exe,dll,sys,msi"
                         ToolTip="Specify file extensions to check, separated by commas"/>

                <CheckBox x:Name="chkIncludeSubdirectories" Grid.Row="1" Grid.Column="1" 
                          Content="Include subdirectories" 
                          Margin="0,16,0,0" 
                          IsChecked="True"
                          FontWeight="SemiBold"/>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16">
            <Button x:Name="btnStartCheck" 
                    Content="🔍 Start Scan" 
                    Style="{StaticResource ModernButton}"
                    Width="140" Height="40"
                    FontSize="14"
                    Click="BtnStartCheck_Click"/>
            <Button x:Name="btnClear" 
                    Content="🗑️ Clear Results" 
                    Style="{StaticResource SecondaryButton}"
                    Width="140" Height="40"
                    FontSize="14"
                    Click="BtnClear_Click"/>
            <Button x:Name="btnCancel" 
                    Content="❌ Cancel" 
                    Style="{StaticResource DangerButton}"
                    Width="120" Height="40"
                    FontSize="14"
                    Visibility="Collapsed"
                    Click="BtnCancel_Click"/>
        </StackPanel>

        <!-- Progress Bar -->
        <Border Grid.Row="4" Background="White" CornerRadius="4" 
                BorderBrush="#E9ECEF" BorderThickness="1" 
                Padding="16" Margin="8,0,8,16"
                x:Name="progressPanel" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="txtProgressStatus" Grid.Row="0" 
                           Text="Scanning files..." 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                
                <ProgressBar x:Name="progressBar" Grid.Row="1" 
                             Height="8" 
                             Background="#E9ECEF"
                             Foreground="#007ACC"
                             Margin="0,0,0,8"/>
                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="txtProgressFile" Grid.Column="0" 
                               Text="File: example.exe" 
                               FontSize="11" 
                               Foreground="#6C757D"/>
                    
                    <TextBlock x:Name="txtProgressSigned" Grid.Column="1" 
                               Text="Signed: 0" 
                               FontSize="11" 
                               Foreground="#28A745"
                               HorizontalAlignment="Center"/>
                    
                    <TextBlock x:Name="txtProgressUnsigned" Grid.Column="2" 
                               Text="Unsigned: 0" 
                               FontSize="11" 
                               Foreground="#DC3545"
                               HorizontalAlignment="Right"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Results Display -->
        <Grid Grid.Row="4" x:Name="resultsPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Signed Files -->
            <GroupBox Header="✅ Signed Files" Grid.Column="0" Style="{StaticResource ModernGroupBox}" Margin="8,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#D4EDDA" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                        <TextBlock x:Name="txtSignedCount" 
                                   Text="Count: 0" 
                                   FontWeight="Bold"
                                   Foreground="#155724"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <ListBox x:Name="lstSignedFiles" Grid.Row="1" 
                             Style="{StaticResource ModernListBox}"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </GroupBox>

            <!-- Unsigned Files -->
            <GroupBox Header="❌ Unsigned Files" Grid.Column="1" Style="{StaticResource ModernGroupBox}" Margin="4,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#F8D7DA" CornerRadius="4" Padding="8,4" Margin="0,0,0,8">
                        <TextBlock x:Name="txtUnsignedCount" 
                                   Text="Count: 0" 
                                   FontWeight="Bold"
                                   Foreground="#721C24"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    <ListBox x:Name="lstUnsignedFiles" Grid.Row="1" 
                             Style="{StaticResource ModernListBox}"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="#F8F9FA" CornerRadius="0,0,8,8" 
                BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" 
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                <TextBlock x:Name="txtStatus" Grid.Column="1" Text="Ready to scan" FontSize="14"/>
                <TextBlock x:Name="txtVersion" Grid.Column="2" Text="v1.0.0" FontSize="10" Foreground="#6C757D"/>
            </Grid>
        </Border>
    </Grid>
</Window>
