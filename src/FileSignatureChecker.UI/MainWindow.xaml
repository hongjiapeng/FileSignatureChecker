<Window
    x:Class="FileSignatureChecker.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:FileSignatureChecker.UI.ViewModels"
    Title="Digital Signature Checker"
    Width="1100"
    Height="750"
    MinWidth="800"
    MinHeight="600"
    Background="#F8F9FA"
    WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!--  Modern flat design styles  -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style
            x:Key="SecondaryButton"
            BasedOn="{StaticResource ModernButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#6C757D" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3E444A" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style
            x:Key="DangerButton"
            BasedOn="{StaticResource ModernButton}"
            TargetType="Button">
            <Setter Property="Background" Value="#DC3545" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BD2130" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border
                                    Grid.Row="0"
                                    Padding="16,12"
                                    Background="#F8F9FA"
                                    CornerRadius="8,8,0,0">
                                    <ContentPresenter ContentSource="Header" />
                                </Border>
                                <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#CED4DA" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernListBox" TargetType="ListBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E9ECEF" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ScrollViewer Focusable="False">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,16"
            Padding="20,16"
            Background="#007ACC"
            CornerRadius="8,8,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="🔐" />
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Digital Signature Checker" />
                    <TextBlock
                        Margin="0,4,0,0"
                        FontSize="12"
                        Foreground="#E6F3FF"
                        Text="Verify digital signatures of executable files" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Folder Selection  -->
        <GroupBox
            Grid.Row="1"
            Header="📁 Select Directory"
            Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    Background="#F8F9FA"
                    IsReadOnly="True"
                    Style="{StaticResource ModernTextBox}"
                    Text="{Binding FolderPath, Mode=OneWay}" />
                <Button
                    Grid.Column="1"
                    Width="120"
                    Command="{Binding SelectFolderCommand}"
                    Content="Browse"
                    Style="{StaticResource ModernButton}" />
            </Grid>
        </GroupBox>

        <!--  Detection Settings  -->
        <GroupBox
            Grid.Row="2"
            Header="⚙️ Scan Settings"
            Style="{StaticResource ModernGroupBox}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,16,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="File Types:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    IsEnabled="{Binding IsNotScanning}"
                    Style="{StaticResource ModernTextBox}"
                    Text="{Binding FileTypes, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Specify file extensions to check, separated by commas" />

                <CheckBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,16,0,0"
                    Content="Include subdirectories"
                    FontWeight="SemiBold"
                    IsChecked="{Binding IncludeSubdirectories}"
                    IsEnabled="{Binding IsNotScanning}" />
            </Grid>
        </GroupBox>

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,16"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="140"
                Height="40"
                Command="{Binding StartCheckCommand}"
                Content="🔍 Start Scan"
                FontSize="14"
                Style="{StaticResource ModernButton}" />
            <Button
                Width="140"
                Height="40"
                Command="{Binding ClearCommand}"
                Content="🗑️ Clear Results"
                FontSize="14"
                Style="{StaticResource SecondaryButton}" />
            <Button
                Width="120"
                Height="40"
                Command="{Binding CancelCommand}"
                Content="❌ Cancel"
                FontSize="14"
                Style="{StaticResource DangerButton}"
                Visibility="{Binding CancelButtonVisibility}" />
        </StackPanel>

        <!--  Progress Bar  -->
        <Border
            Grid.Row="4"
            Margin="8,0,8,16"
            Padding="16"
            Background="White"
            BorderBrush="#E9ECEF"
            BorderThickness="1"
            CornerRadius="4"
            Visibility="{Binding ProgressPanelVisibility}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    FontWeight="SemiBold"
                    Text="{Binding ProgressStatus}" />

                <ProgressBar
                    Grid.Row="1"
                    Height="8"
                    Margin="0,0,0,8"
                    Background="#E9ECEF"
                    Foreground="#007ACC"
                    Value="{Binding ProgressPercentage}" />

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        FontSize="11"
                        Foreground="#6C757D"
                        Text="{Binding ProgressFile}" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        FontSize="11"
                        Foreground="#28A745"
                        Text="{Binding ProgressSigned}" />

                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        FontSize="11"
                        Foreground="#DC3545"
                        Text="{Binding ProgressUnsigned}" />
                </Grid>
            </Grid>
        </Border>

        <!--  Results Display  -->
        <Grid Grid.Row="4" Visibility="{Binding ResultsPanelVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Signed Files  -->
            <GroupBox
                Grid.Column="0"
                Margin="8,0,4,0"
                Header="✅ Signed Files"
                Style="{StaticResource ModernGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        Padding="8,4"
                        Background="#D4EDDA"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#155724"
                            Text="{Binding SignedCount}" />
                    </Border>

                    <ListBox
                        Grid.Row="1"
                        ItemsSource="{Binding SignedFiles}"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        Style="{StaticResource ModernListBox}" />
                </Grid>
            </GroupBox>

            <!--  Unsigned Files  -->
            <GroupBox
                Grid.Column="1"
                Margin="4,0,8,0"
                Header="❌ Unsigned Files"
                Style="{StaticResource ModernGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        Padding="8,4"
                        Background="#F8D7DA"
                        CornerRadius="4">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Foreground="#721C24"
                            Text="{Binding UnsignedCount}" />
                    </Border>

                    <ListBox
                        Grid.Row="1"
                        ItemsSource="{Binding UnsignedFiles}"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        Style="{StaticResource ModernListBox}" />
                </Grid>
            </GroupBox>
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="5"
            Padding="16,12"
            Background="#F8F9FA"
            BorderBrush="#E9ECEF"
            BorderThickness="0,1,0,0"
            CornerRadius="0,0,8,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,8,0"
                    FontWeight="SemiBold"
                    Text="Status:" />
                <TextBlock
                    Grid.Column="1"
                    FontSize="14"
                    Text="{Binding StatusMessage}" />
                <TextBlock
                    Grid.Column="2"
                    FontSize="10"
                    Foreground="#6C757D"
                    Text="{Binding Version}" />
            </Grid>
        </Border>
    </Grid>
</Window>
